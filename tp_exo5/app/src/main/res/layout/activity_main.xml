<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/act1_ed_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/act1_ed_last_name"
        android:ems="15"
        android:hint="Enter your first name"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/act1_ed_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="Enter your last name"
        android:layout_centerInParent="true"
        android:inputType="textPersonName"
        android:text=""/>

    <Button
        android:id="@+id/act1_btn_save"
        android:layout_below="@+id/act1_ed_last_name"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/act1_ed_last_name"
        android:layout_toLeftOf="@id/act1_btn_cancel"
        android:layout_height="wrap_content"
        android:text="Save" />

    <Button
        android:id="@+id/act1_btn_cancel"
        android:layout_below="@+id/act1_ed_last_name"
        android:layout_alignRight="@+id/act1_ed_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />

</RelativeLayout>